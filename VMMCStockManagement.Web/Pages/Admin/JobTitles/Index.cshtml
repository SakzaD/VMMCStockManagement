@page
@model VMMCStockManagement.Web.Pages.Admin.JobTitles.IndexModel
@{
	ViewData["Title"] = "Job Title";
}

<div id="jobTitle">
	<input type="hidden" value="@webSecurity.UserId" ref="userId" id="userId" />
	<div class="page-header page-header-light">
		<div class="page-header-content header-elements-md-inline">
			<div class="page-title d-flex">
				<h5><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-semibold">Job Title</span> - List</h5>
				<a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
			</div>
		</div>

		<div class="breadcrumb-line breadcrumb-line-light header-elements-md-inline">
			<div class="d-flex">
				<div class="breadcrumb">
					<a href="#" class="breadcrumb-item"><i class="icon-home2 mr-2"></i> Home</a>
					<span class="breadcrumb-item active">Job Title</span>
				</div>

				<a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
			</div>
		</div>
	</div>
	<div class="content">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-header header-elements-inline">
						<button v-on:click="clearJobTitle();" data-toggle="modal" data-target="#modalAddNew" class="btn bg-info-800 ml-3 float-left ">Add Job Title</button>
					</div>

					<div class="card-body">
						<table id="tblJobTitle" class="table datatable-button-html5-columns">
							<thead>
								<tr>
									<th>Name</th>

									<th></th>

								</tr>
							</thead>
							<tbody>
								<tr v-for="item in jobTitles">
									<td>{{item.name}}</td>

									<td class="text-center">
										<div class="list-icons">
											<div class="dropdown">
												<a href="#" class="list-icons-item" data-toggle="dropdown">
													<i class="icon-menu9"></i>
												</a>

												<div class="dropdown-menu dropdown-menu-right">

													<a href="#" v-on:click="selectedJobTitle = item" data-toggle="modal" data-target="#modalEdit" class="dropdown-item"><i class="icon-pencil5"></i> Edit</a>
													<a href="#" v-on:click="selectedJobTitle = item" data-toggle="modal" data-target="#modalDelete" class="dropdown-item"><i class="icon-bin2"></i> Delete</a>
												</div>
											</div>
										</div>
									</td>
								</tr>




							</tbody>
						</table>
					</div>

					
				</div>
				<!-- /column selectors -->


			</div>
		</div>
	</div>


	<!-- Vertical form modal -->
	<div id="modalAddNew" class="modal fade" tabindex="-1">
		<div class="modal-dialog modal-sm">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">New Job Titles</h5>
					<button type="button" class="close" data-dismiss="modal">&times;</button>
				</div>

				<div class="modal-body">
					<div class="form-group" :class="{ 'form-group--error': $v.jobTitle.name.$error }">
						<div class="row">
							<div class="col-sm-12">
								<label>Name</label>
								<input type="text" v-model="jobTitle.name" placeholder="Job Title" class="form-control">
								<div class="error text-danger" v-if="!$v.jobTitle.name.required && hasError">Job title is required</div>
							</div>
							
						</div>
					</div>

				</div>

				<div class="modal-footer">
					<button type="button" class="btn btn-link" data-dismiss="modal">Close</button>
					<button v-on:click="save()" id="btnAdd" type="submit" class="btn bg-info-800 btn-ladda btn-ladda-spinner" data-style="expand-left" data-spinner-color="#333" data-spinner-size="20"><span class="ladda-label">Save</span></button>
				</div>
			</div>
		</div>
	</div>
	<!-- /vertical form modal -->
	<!-- Vertical form modal -->
	<div id="modalEdit" class="modal fade" tabindex="-1">
		<div class="modal-dialog modal-sm">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">Edit Job Title</h5>
					<button type="button" class="close" data-dismiss="modal">&times;</button>
				</div>

				<div class="modal-body">
					<div class="form-group" :class="{ 'form-group--error': $v.selectedJobTitle.name.$error }">
						<div class="row">
							<div class="col-sm-12">
								<label>Name</label>
								<input type="text" v-model="selectedJobTitle.name" placeholder="Job Title" class="form-control">
								<div class="error text-danger" v-if="!$v.selectedJobTitle.name.required && hasError">Job title is required</div>
							</div>

							
						</div>
					</div>

				</div>

				<div class="modal-footer">
					<button type="button" class="btn btn-link" data-dismiss="modal">Close</button>
					<button v-on:click="edit()" type="submit" id="btnUpdate" class="btn bg-info-800 btn-ladda btn-ladda-spinner" data-style="expand-left" data-spinner-color="#333" data-spinner-size="20"><span class="ladda-label">Save</span></button>
				</div>
			</div>
		</div>
	</div>
	<!-- /vertical form modal -->
	<!-- Vertical form modal -->
	<div id="modalDelete" class="modal fade" tabindex="-1">
		<div class="modal-dialog modal-sm">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">Delete Job Title</h5>
					<button type="button" class="close" data-dismiss="modal">&times;</button>
				</div>

				<div class="modal-body">
					<p>Are you sure you want to delete this job title?</p>

				</div>

				<div class="modal-footer">
					<button id="btnDelete" v-on:click="deleteJobTitle()" type="submit" class="btn bg-danger btn-ladda btn-ladda-spinner" data-style="expand-left" data-spinner-color="#333" data-spinner-size="20"><span class="ladda-label">Yes, Delete</span></button>
					<button type="button" class="btn btn-link" data-dismiss="modal">Close</button>

				</div>
			</div>
		</div>
	</div>
	<!-- /vertical form modal -->


</div>

@section Scripts {

	<script src="~/app/project/admin/manage-jobtitle.js"></script>

}