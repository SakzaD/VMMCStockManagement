@page
@model VMMCStockManagement.Web.Pages._404Model
@{
    ViewData["Title"] = "404 Not Found";
    Layout = "~/Pages/_ErrorLayout.cshtml";
}

<div class="page-content">

    <!-- Main content -->
    <div class="content-wrapper">

        <!-- Content area -->
        <div class="content d-flex justify-content-center align-items-center">

            <!-- Container -->
            <div class="flex-fill">

                <!-- Error title -->
                <div class="text-center mb-3">
                    <h1 class="error-title">405</h1>
                    <h5>Oops!! Page not found!</h5>
                </div>
                <!-- /error title -->
                <!-- Error content -->
                <div class="row justify-content-center align-items-center">
                    <div class="col-*">
                        <a href="@webSecurity.DomainUrl" class="btn btn-primary btn-block"><i class="icon-home4 mr-2"></i>Go Home</a>
                    </div>
                </div>
                <!-- /error wrapper -->

            </div>
            <!-- /container -->

        </div>
        <!-- /content area -->

    </div>
    <!-- /main content -->

</div>
<!-- /page content -->
